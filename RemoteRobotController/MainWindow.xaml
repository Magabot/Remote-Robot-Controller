<Window x:Class="RemoteRobotController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose your controls" Height="458" Width="440" Icon="/RemoteRobotController;component/favicon.ico">
    <Grid>
        <Image Height="197" HorizontalAlignment="Left" Margin="12,12,0,0" Stretch="Uniform" VerticalAlignment="Top" Width="194" Source="/RemoteRobotController;component/Images/arrow-keys.png" MouseDown="generalControlsButton_Click" />
        <Image Height="196" HorizontalAlignment="Left" Margin="212,12,0,0" Source="/RemoteRobotController;component/Images/xbox-controller.png" Stretch="Uniform" VerticalAlignment="Top" Width="194" MouseDown="xboxGamepadButton_Click" />
        <Image Height="194" HorizontalAlignment="Left" Margin="12,214,0,0" Source="/RemoteRobotController;component/Images/arduino_uno.png" Stretch="Uniform" VerticalAlignment="Top" Width="194" MouseDown="steeringWheelButton_Click"/>
        <Image Height="194" HorizontalAlignment="Left" Margin="212,214,0,0" Source="/RemoteRobotController;component/Images/kinect.png" Stretch="Uniform" VerticalAlignment="Top" Width="194" StretchDirection="Both" />
    </Grid>
</Window>
